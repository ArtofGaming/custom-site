---
interface Props {
	title: string;
	body: string;
	href: string;
	image: string;
	pubDate: Date;
}

const { href, title, body, image } = Astro.props;
---
<div style="padding-left:0; padding-right:0; min-height:0; overflow:hidden; border-radius:5px">
	<li class="link-card">
		<a href={href}>
			<img class="card-img" src={image} alt="project image">
				<h2>
					{title}
				</h2>
			</img>
			<p style="padding-right: 2ch; padding-left: 2ch; padding-bottom:1ch">
				{body}
			</p>
		</a>
	</li>
	
</div>
<style>
	.link-card {
		display:inline-grid;
		padding-top: 0em;
		background-color: rgb(40, 25, 7);
		background-image: none;
		overflow:hidden;
		min-height:0;
		width:calc(19rem);
		border-radius: 5px;
		background-position: 70%;
		opacity: .7;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		text-overflow:hidden;
	}
	.link-card > a {
		text-decoration: none;
		overflow:hidden;
		min-height:0;
		display:grid;
		line-height: 1.4;
		padding-top: calc(1rem - 1px);
		width: calc(19rem);
		color: white;
		opacity: 0.8;
		text-overflow:hidden;
	}
	h2 {
		text-align: center;
		font-size: 1.25rem;
		color: rgb(228, 157, 126);
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		margin-top:-.75em;
		margin-bottom:.25em;
	}
	p {
		text-align: center;
		overflow:hidden;
		min-height:0;
		margin-top: 0;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
