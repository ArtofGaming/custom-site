---
interface Props {
	title: string;
	body: string;
	href: string;
	image: string;
}

const { href, title, body, image } = Astro.props;
---

	<li class="link-card">
		<a href={href}>
			<img class="card-img" src={image} alt="project image">
				<h2>
					{title}
			
				</h2>
				<p>
					{body}
				</p>
			</img>
		</a>
	</li>

<style>
	.link-card {
		list-style: none;
		display: flex;
		background-color: rgb(30, 19, 6);
		background-image: none;
		width:calc(20rem);
		color:white;
		border-radius: 7px;
		background-position: 70%;
		opacity: .7;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1rem - 1px);
		width: calc(22rem);
		color: white;
		opacity: 0.8;
		
	}
	h2 {
		text-align: left;
		font-size: 1.25rem;
		margin-bottom: .05rem;
		color: rgb(228, 157, 126);
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		text-align: left;
		margin-top: 0;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
