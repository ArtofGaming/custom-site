---
import { getCollection, render } from "astro:content";
import PersonalBaseLayout from '../layouts/PersonalBaseLayout.astro';
const pageTitle = "My Games";
import Card from '../components/Card.astro';
const allGames = await getCollection('games');
---

<PersonalBaseLayout pageTitle={pageTitle}>
		<h1>All My Games and Interactive Things Post 2024</h1>

		<ul role="list" class="link-card-grid">
				{allGames.sort((a,b) => {
					return Date.parse(b.data.pubDate.toLocaleDateString()) - Date.parse(a.data.pubDate.toLocaleDateString())
					}
				).map((game) => <Card
				pubDate={game.data.pubDate}
				title={game.data.title}
				body={game.data.description}
				url={`../games/${game.id}/`}
				image={game.data.image.url}
				/>)}
				
			</ul>
		
		<p>
			Looking for a project that's not listed here? It's probably an older project up on my <a href="https://theartofgaming.itch.io">Itch.io</a> near the bottom!
        </p>
		<script>
			import '../scripts/menu.js'
		  </script>
	
</PersonalBaseLayout>

