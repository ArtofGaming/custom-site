---
import { getCollection } from "astro:content";
import Layout from '../layouts/Layout.astro';
import PersonalBaseLayout from '../layouts/PersonalBaseLayout.astro';
import Card from '../components/Card.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Tag from '../pages/tags/[tag].astro';
import '../styles/global.css'

const pageTitle = "My Thoughts";
const allPosts = await getCollection("blog");
---
<PersonalBaseLayout pageTitle={pageTitle} style="min-height:0;">
        <em>Where my musings on creativity, notes on process, and progress updates live</em>
			<ul role="list" class="link-card-grid">
				{allPosts.sort((a,b) => {
					const DateA = a.data.pubDate.toLocaleDateString()
					const DateB = b.data.pubDate.toLocaleDateString()
					if(DateA > DateB) {
						return -1;
					}
					if (DateA < DateB){
						return 1;
					}}
				).map((post) => <Card
				pubDate={post.data.pubDate}
				title={post.data.title}
				body={post.data.description}
				href={`${post.data.title}`}
				image={post.data.image.url}
				/>)}
			</ul>
		  
			<script>
				import '../scripts/menu.js'
			</script>
</PersonalBaseLayout>

<style>
	main {
		min-height:0;
		margin: auto;
		padding: 1rem;
		padding-top: 0%;
		width: 800px;
		max-width: calc(600% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	ul 
	{
		margin:0;
		padding:0;
		padding-top:1em;
	}
	em {
		color: rgb(228, 157, 126);
		font-size: 1.25rem;
		font-weight: 200;
		line-height: 1;
		text-align: left;
		margin-bottom: 1.5rem;
		
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}

</style>
